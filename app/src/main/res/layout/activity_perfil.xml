<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".PerfilActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <ImageButton
            android:id="@+id/imagenPerfil"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@mipmap/profile_example" />

        <EditText
            android:id="@+id/edit_text_username_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imagenPerfil"
            android:hint="@string/username_es" />

        <EditText
            android:id="@+id/edit_text_name_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_username_profile"
            android:hint="@string/name_es" />

        <TextView
            android:id="@+id/text_view_age"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="@string/age_es"
            android:layout_below="@id/edit_text_name_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/text_view_weight"/>

        <EditText
            android:id="@+id/edit_text_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_name_profile"
            android:layout_alignLeft="@id/seek_bar_peso"
            android:layout_alignParentRight="true"
            android:hint="@string/age_es" />

<!--weight_______________________________________________________-->

        <TextView
            android:id="@+id/text_view_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_text_age"
            android:layout_marginEnd="60sp"
            android:text="Peso (Kg)" />

        <TextView
            android:id="@+id/text_view_peso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_view_weight"
            android:layout_marginEnd="40sp"
            android:layout_toRightOf="@id/text_view_weight"
            android:text="Kg" />
        <SeekBar
            android:id="@+id/seek_bar_peso"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/text_view_weight"
            android:layout_toRightOf="@id/text_view_peso"
            android:layout_alignParentRight="true"
            />


<!--height_______________________________________________________-->


        <TextView
            android:id="@+id/text_view_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_peso"
            android:text="Altura (cm)" />

        <TextView
            android:id="@+id/text_view_altura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_peso"
            android:layout_alignLeft="@id/text_view_peso"
            android:layout_marginEnd="40sp"
            android:text="cm" />

        <SeekBar
            android:id="@+id/seek_bar_altura"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_peso"
            android:layout_alignLeft="@id/seek_bar_peso"
            android:layout_alignParentRight="true" />

<!--experience_______________________________________________________-->

        <TextView
            android:id="@+id/text_view_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_altura"
            android:text="Experiencia" />

        <TextView
            android:id="@+id/text_view_experience_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_altura"
            android:layout_alignLeft="@id/text_view_altura"
            android:layout_marginEnd="40sp"
            android:text="50" />

        <SeekBar
            android:id="@+id/seek_bar_experiencia"
            android:layout_width="40sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_altura"
            android:layout_alignLeft="@id/seek_bar_peso"
            android:layout_alignParentRight="true" />


        <Button
            android:id="@+id/button_aplicar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/apply_es"
            android:layout_below="@id/text_view_experience"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/button_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_aplicar"
            android:background="@color/colorPrimaryDark"
            android:text="@string/change_password_es"
            android:textColor="@color/white" />

    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>