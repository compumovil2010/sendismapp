<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popUpInfoFinRuta"
    android:orientation="vertical"
    android:layout_width="320dp"
    android:layout_height="470dp"
    android:background="@color/colorSecondary"
    android:padding="10dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="160dp"
        android:layout_height="165dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginStart="70dp"
        android:src="@drawable/warning"
        android:layout_marginVertical="10dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/imageView13" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="ESTA ACCIÓN ELIMINARA PERMANENTEMENTE SU RUTA"
        android:textColor="@color/blanco"
        android:textSize="25sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Si estás seguro de tu decisión, dale al botón"
        android:textColor="@color/blanco"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btnElimicionDefinitiva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="eliminarParaSiempre"
        android:layout_marginTop="40dp"
        android:text="CONFIRMAR ELIMINACIÓN" />
</LinearLayout>