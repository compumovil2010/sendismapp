<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sendismapp.HistorialRutas">

    <TextView
        android:id="@+id/textNotificacion"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorSecondary"
        android:gravity="center"
        android:text="Historial de Rutas"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollNotificaciones"
        android:layout_width="match_parent"
        android:layout_height="583dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNotificacion">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/listaHistorial"
                android:layout_width="match_parent"
                android:layout_height="566dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonCalificar"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="Calificar"
        android:background="@color/colorSecondary"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonComentar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollNotificaciones"
        />

    <Button
        android:id="@+id/buttonComentar"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:background="@color/colorSecondary"
        android:text="Comentar"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollNotificaciones" />
</androidx.constraintlayout.widget.ConstraintLayout>