<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainMenuActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500sp"
        android:padding="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_above="@+id/button_create_route"
            android:layout_centerHorizontal="true"
            android:scaleType="center"
            android:scaleX="1"
            android:scaleY="1"
            app:srcCompat="@mipmap/Sendismap_logo_foreground" />

        <Button
            android:id="@+id/button_create_route"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="40sp"
            android:background="@color/colorPrimaryDark"
            android:text="@string/create_new_route"
            android:textColor="@color/textColorLight"
            android:layout_marginBottom="40sp"/>
        <Button
            android:id="@+id/button_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button_create_route"
            android:layout_alignLeft="@id/button_create_route"
            android:layout_alignRight="@id/button_create_route"
            android:text="@string/travel_route"
            android:textColor="@color/textColorLight"
            android:background="@color/colorPrimaryDark"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>