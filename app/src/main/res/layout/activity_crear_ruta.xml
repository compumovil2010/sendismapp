<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".CrearRuta">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <include
        android:id="@+id/mapa_crear"
        layout="@layout/contenedor_mapa_crear_ruta"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />



    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Marcadores:"
        android:textColor="@color/texts"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView13"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@drawable/water" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@drawable/m_energia" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@drawable/m_paisaje" />

    <ImageButton
        android:id="@+id/imgBTomarFoto2"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/imageView14"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@android:drawable/ic_menu_camera" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:src="@drawable/m_dificultad" />

    <Spinner
        android:id="@+id/spnDistancia"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        app:layout_constraintStart_toEndOf="@+id/textNotificacion"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <TextView
        android:id="@+id/textNotificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frecuencia en toma de datos"
        android:textColor="@color/texts"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        android:src="@drawable/m_pin_bandera" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/m_pin_rojo" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="55sp"
        android:layout_height="55sp"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        android:src="@drawable/m_pin_azul" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0sp"
        android:layout_height="45sp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:text="Guardar"
        android:background="@color/colorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtVherramientasEdicion"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/texts"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mapa_crear" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@color/colorSecondary"
        android:layout_marginStart="45dp"
        android:onClick="popUpInfoMarcadores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:src="@android:drawable/ic_menu_info_details" />


</androidx.constraintlayout.widget.ConstraintLayout>